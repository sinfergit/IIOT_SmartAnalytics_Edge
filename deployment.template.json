{
  "$schema-template": "2.0.0",
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {
              "bmsanalyticsedge": {
                "username": "$CONTAINER_REGISTRY_USERNAME_bmsanalyticsedge",
                "password": "$CONTAINER_REGISTRY_PASSWORD_bmsanalyticsedge",
                "address": "bmsanalyticsedge.azurecr.io"
              }
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.0",
              "createOptions": {}
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.0",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "5671/tcp": [
                      {
                        "HostPort": "5671"
                      }
                    ],
                    "8883/tcp": [
                      {
                        "HostPort": "8883"
                      }
                    ],
                    "443/tcp": [
                      {
                        "HostPort": "443"
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        "modules": {
          "grafana": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "grafana/grafana",
              "createOptions": {
                "Hostname": "grafana",
                "HostConfig": {
                  "PortBindings": {
                    "3000/tcp": [
                      {
                        "HostPort": "3000"
                      }
                    ]
                  },
                  "Binds": [
                    "/home/sineth/iiotedge/grafana_data:/var/lib/grafana"
                  ]
                },
                "ExposedPorts": {
                  "3000/tcp": {}
                }
              }
            }
          },
          "influxdb": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "influxdb:1.8",
              "createOptions": {
                "Hostname": "influxdb",
                "HostConfig": {
                  "PortBindings": {
                    "8086/tcp": [
                      {
                        "HostPort": "8086"
                      }
                    ]
                  },
                  "Binds": [
                    "/home/sineth/iiotedge/influx_data:/var/lib/influxdb"
                  ]
                },
                "ExposedPorts": {
                  "8086/tcp": {}
                }
              }
            }
          },
          "kapacitor": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "kapacitor",
              "createOptions": {
                "Hostname": "kapacitor",
                "Env": [
                  "KAPACITOR_LOGGING_LEVEL=INFO",
                  "KAPACITOR_REPORTING_ENABLED=false",
                  "KAPACITOR_INFLUXDB_0_ENABLED=true",
                  "KAPACITOR_INFLUXDB_0_DEFAULT=true",
                  "KAPACITOR_INFLUXDB_0_URLS_0=http://influxdb:8086"
                ],
                "HostConfig": {
                  "PortBindings": {
                    "9092/tcp": [
                      {
                        "HostPort": "9092"
                      }
                    ]
                  },
                  "Binds": [
                    "/home/sineth/iiotedge/kapacitor/data:/var/lib/kapacitor",
                    "/home/sineth/iiotedge/kapacitor/config:/etc/kapacitor/"
                  ]
                },
                "ExposedPorts": {
                  "9092/tcp": {}
                }
              }
            }
          },
          "chronograf": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "chronograf",
              "createOptions": {
                "Hostname": "chronograf",
                "Env": [
                  "INFLUXDB_URL=http://influxdb:8086",
                  "KAPACITOR_URL=http://kapacitor:9092"
                ],
                "HostConfig": {
                  "PortBindings": {
                    "8888/tcp": [
                      {
                        "HostPort": "8888"
                      }
                    ]
                  },
                  "Binds": [
                    "/home/sineth/iiotedge/chronograf_data:/var/lib/chronograf"
                  ]
                },
                "ExposedPorts": {
                  "8888/tcp": {}
                }
              }
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "routes": {},
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    }
  }
}