{
  "$schema-template": "2.0.0",
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {
              "bmsanalyticsedge": {
                "username": "$CONTAINER_REGISTRY_USERNAME_bmsanalyticsedge",
                "password": "$CONTAINER_REGISTRY_PASSWORD_bmsanalyticsedge",
                "address": "bmsanalyticsedge.azurecr.io"
              }
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.0",
              "createOptions": {}
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.0",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "5671/tcp": [
                      {
                        "HostPort": "5671"
                      }
                    ],
                    "8883/tcp": [
                      {
                        "HostPort": "8883"
                      }
                    ],
                    "443/tcp": [
                      {
                        "HostPort": "443"
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        "modules": {
          "edge_api": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.edge_api}",
              "createOptions": {
                "ExposedPorts": {
                  "5000/tcp": {}
                },
                "HostConfig": {
                  "PortBindings": {
                    "5000/tcp": [
                      {
                        "HostPort": "5000"
                      }
                    ]
                  }
                }
              }
            }
          },
          "OPCPublisher": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/iotedge/opc-publisher:2.8",
              "createOptions": {
                "Hostname": "publisher",
                "Cmd": [
                  "publisher",
                  "--pf=/appdata/publishednodes.json",
                  "--lf=/appdata/publisher.log",
                  "--mm=PubSub",
                  "--me=Json",
                  "--fm=false",
                  "--fd=false",
                  "--bs=1",
                  "--BatchTriggerInterval=00:00:01.000",
                  "--aa"
                ],
                "HostConfig": {
                  "Binds": [
                    "/home/sineth/iiotedge:/appdata"
                  ]
                }
              }
            }
          },
          "edge_preprocessor": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.edge_preprocessor}",
              "createOptions": {}
            }
          },
          "edge_socket_server": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.edge_socket_server}",
              "createOptions": {
                "ExposedPorts": {
                  "8091/tcp": {}
                },
                "HostConfig": {
                  "PortBindings": {
                    "8091/tcp": [
                      {
                        "HostPort": "8091"
                      }
                    ]
                  }
                }
              }
            }
          },
          "python_test_module": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.python_test_module}",
              "createOptions": {}
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "routes": {
          "OPCPublisherToedge_preprocessor": "FROM /messages/modules/OPCPublisher INTO BrokeredEndpoint(\"/modules/python_test_module/inputs/input1\")"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    }
  }
}